<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id ="student1" class="xml_based.Student">
        <property name="id" value="1"/>
        <property name="name" value="Abinash"/>
        <property name="address" ref="address1"/>
    </bean>
    <bean id ="student2" class="xml_based.Student" scope="prototype">
        <property name="id" value="2"/>
        <property name="name" value="Deepak"/>
        <property name="address" ref="address2"/>
    </bean>
    <bean id="student4" class="xml_based.Student">
        <constructor-arg type="int" value="3"/>
        <constructor-arg type="java.lang.String" value="Ramji"/>
        <constructor-arg type="xml_based.Address" ref="address3"/>
    </bean>



    <bean id="address1" class="xml_based.Address">
        <property name="doorNo" value="14"/>
        <property name="city" value="Bangalore"/>
    </bean>

    <bean id="address2" class="xml_based.Address">
        <property name="doorNo" value="20"/>
        <property name="city" value="Chennai"/>
    </bean>

    <bean id="address3" class="xml_based.Address">
        <property name="doorNo" value="30"/>
        <property name="city" value="Hyderabad"/>
    </bean>


</beans>