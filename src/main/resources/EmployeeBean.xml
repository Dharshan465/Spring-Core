<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="department" class="exercise.model.Department" init-method="init" destroy-method="destroy">
        <constructor-arg value="IT"/>
    </bean>

    <bean id="employee1" class="exercise.model.Employee">
        <constructor-arg type="int" value="1"/>
        <constructor-arg type="java.lang.String" value="Abinash"/>
        <constructor-arg type="exercise.model.Department" ref="department"/>
    </bean>

    <bean id="employee2" class="exercise.model.Employee" init-method="init" destroy-method="destroy">
        <constructor-arg type="int" value="2"/>
        <constructor-arg type="java.lang.String" value="Dharshan"/>
        <constructor-arg type="exercise.model.Department" ref="department"/>
    </bean>



</beans>